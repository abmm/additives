- model_class = Origin
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:origin_id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @origins.each do |origin|
      %tr
        %td= link_to origin.id, origin_path(origin)
        %td= origin.origin_id
        %td= origin.name
        %td=l origin.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_origin_path(origin), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), origin_path(origin), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_origin_path, :class => 'btn btn-primary'

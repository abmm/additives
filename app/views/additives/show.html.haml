- model_class = Additive
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:code) + ':'
  %br
  = @additive.code
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @additive.name
%p
  %strong= model_class.human_attribute_name(:origin) + ':'
  %br
  = @additive.origin.name    if @additive.origin
%p
  %strong= model_class.human_attribute_name(:toxicity) + ':'
  %br
  = toxicity_to_s(@additive.toxicity)
%p
  %strong= model_class.human_attribute_name(:classification) + ':'
  %br
  = @additive.classification.name    if @additive.classification
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @additive.description
%p
  %strong= model_class.human_attribute_name(:use) + ':'
  %br
  = @additive.use
%p
  %strong= model_class.human_attribute_name(:effects) + ':'
  %br
  = @additive.effects



= link_to t('.back', :default => t("helpers.links.back")), additives_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_additive_path(@additive), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), additive_path(@additive), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

- model_class = Classification
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:classification_id) + ':'
  %br
  = @classification.classification_id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @classification.name


= link_to t('.back', :default => t("helpers.links.back")), classifications_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_classification_path(@classification), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), classification_path(@classification), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
